{
  "name": "@vibe-kanban/cli",
  "version": "0.1.0",
  "exports": "./src/main.ts",
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-write --allow-env --allow-run=git,fzf src/main.ts",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno check src/main.ts",
    "test": "deno test --allow-net --allow-read --allow-write --allow-env",
    "test:integration": "deno test --allow-net --allow-read --allow-write --allow-env --allow-run=deno,git,fzf tests/*_integration_test.ts"
  },
  "imports": {
    "@cliffy/command": "jsr:@cliffy/command@1.0.0-rc.7",
    "@cliffy/prompt": "jsr:@cliffy/prompt@1.0.0-rc.7",
    "@cliffy/table": "jsr:@cliffy/table@1.0.0-rc.7",
    "@std/path": "jsr:@std/path@1.0.8",
    "@std/assert": "jsr:@std/assert@1.0.9"
  },
  "compilerOptions": {
    "strict": true
  },
  "fmt": {
    "include": ["src/", "tests/"]
  },
  "lint": {
    "include": ["src/", "tests/"]
  }
}
